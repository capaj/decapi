  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES2017"],
    "target": "ES2018",
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [{ "transform": "typescript-rtti/dist/transformer" }]
  }
}
