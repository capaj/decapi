    "husky": "^0.14.3",
    "jest": "^22.4.4",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.6.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.59.2",
    "rollup-plugin-typescript": "^0.8.1",
