  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/jest": "^25.1.5",
    "@types/node": "^13.11.0",
    "@types/object-path": "^0.11.0",
    "@types/reflect-metadata": "^0.1.0",
    "docz": "^2.3.0",
    "docz-theme-default": "^1.2.0",
    "gh-pages": "^2.2.0",
