{
  "name": "decapi",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "scripts": {
    "docz:dev": "docz dev",
    "lint": "tslint --project ./tsconfig.json",
    "docz:build": "docz build && cp docs/netlify.toml .docz/dist/",
    "pretest": "yarn lint",
    "bench": "ts-node src/benchmark/decapi",
    "benchTG": "ts-node src/benchmark/type-graphql",
