    "graphql": "^15"
  },
  "dependencies": {
    "class-transformer": "^0.2.3",
    "graphql-iso-date": "^3.6.1",
    "object-path": "^0.11.4",
    "reflect-metadata": "^0.1.13"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
