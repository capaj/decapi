{
  "name": "decapi",
  "version": "2.0.5",
  "type": "module",
  "main": "dist/cjs/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "types": "types/index.d.ts",
  "license": "MIT",
  "scripts": {
    "docz:dev": "docz dev",
    "lint": "tslint --project ./tsconfig.json",
    "docz:build": "docz build && cp docs/netlify.toml .docz/dist/",
    "pretest": "yarn lint",
    "bench": "node --loader ts-node/esm -prof --experimental-specifier-resolution=node src/benchmark/decapi",
    "benchTG": "ts-node-esm -C ttypescript src/benchmark/type-graphql",
    "test": "jest --coverage",
    "w": "jest --watch",
    "buildCjs": "rm -rf types lib && tsc --project tsconfig.json --module commonjs --outDir dist/cjs",
    "buildEsm": "rm -rf types lib && tsc --project tsconfig.json --module ESNext --outDir dist/esm",
    "precommit": "pretty-quick --staged",
    "prepublishOnly": "yarn build",
    "build": "yarn buildCjs && yarn buildEsm"
  },
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/capaj/decapi"
  },
  "keywords": [
    "typescript",
    "graphql",
    "gql",
    "schema",
    "resolvers",
    "api",
    "typesafe",
    "oop",
    "orm",
    "types",
    "decorators",
    "controllers",
    "apollo",
    "backend"
  ],
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@types/reflect-metadata": "^0.1.0",
    "docz": "1",
    "docz-theme-default": "^1.2.0",
    "gh-pages": "^4.0.0",
    "graphql": "^16",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.76.0",
    "rollup-plugin-typescript2": "^0.32.1",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-sonarts": "^1.9.0",
    "type-graphql": "^1.1.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "graphql": "^16 | ^17"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "graphql-scalars": "^1.17.0",
    "reflect-metadata": "^0.1.13",
    "ttypescript": "^1.5.13",
    "typescript-rtti": "^0.8.0"
  },
  "resolutions": {
    "get-pkg-repo": "4.1.1",
    "hosted-git-info": "^2.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix"
    ],
    "*.{js,jsx,mjs,json,css,ts,tsx,less}": [
      "prettier --write"
    ]
  }
}
