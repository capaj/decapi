  },
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/capaj/decapi"
  },
  "keywords": [
    "typescript",
    "graphql",
    "gql",
    "schema",
    "resolvers",
    "api",
    "typesafe",
    "oop",
    "orm",
    "types",
    "decorators",
    "controllers",
    "apollo",
    "backend"
  ],
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/object-path": "^0.11.1",
    "@types/reflect-metadata": "^0.1.0",
    "docz": "^2.4.0",
    "docz-theme-default": "^1.2.0",
    "gh-pages": "^3.2.3",
    "graphql": "^16.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.6",
    "prettier": "^2.6.0",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-sonarts": "^1.9.0",
    "type-graphql": "^1.1.1",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "graphql": "^16"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "graphql-scalars": "^1.15.0",
    "object-path": "^0.11.8",
    "reflect-metadata": "^0.1.13",
    "ttypescript": "^1.5.13",
    "typescript-rtti": "^0.5.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix"
    ],
    "*.{js,jsx,mjs,json,css,ts,tsx,less}": [
      "prettier --write"
    ]
  }
