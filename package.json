{
  "name": "decapi",
  "version": "0.8.8",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "scripts": {
    "docz:dev": "docz dev",
    "lint": "tslint --project ./tsconfig.json",
    "docz:build": "docz build && cp docs/netlify.toml .docz/dist/",
    "pretest": "yarn lint",
    "test": "jest --coverage",
    "w": "jest --watch",
    "build": "rm -rf types lib && tsc --project tsconfig.json",
    "precommit": "pretty-quick --staged"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/capaj/decapi"
  },
  "keywords": [
    "typescript",
    "graphql",
    "schema",
    "resolvers",
    "api",
    "typesafe",
    "oop",
    "decorators",
    "controllers",
    "apollo"
  ],
  "devDependencies": {
    "@types/graphql": "^14.2.0",
    "@types/graphql-iso-date": "^3.3.1",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.5",
    "@types/object-path": "^0.11.0",
    "@types/reflect-metadata": "^0.1.0",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "gh-pages": "^2.0.1",
    "graphql": "^14.2.0",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.14.3",
    "rollup-plugin-typescript2": "^0.21.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.5.1"
  },
  "peerDependencies": {
    "graphql": "^0.13 || ^14"
  },
  "dependencies": {
    "class-transformer": "^0.2.3",
    "graphql-iso-date": "^3.6.1",
    "object-path": "^0.11.4",
    "reflect-metadata": "^0.1.13"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{js,jsx,mjs,json,css,ts,tsx,less}": [
      "prettier --write",
      "git add"
    ]
  }
}
